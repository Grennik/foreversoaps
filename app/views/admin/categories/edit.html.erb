<div class="admin-panel">
  <div class="admin-top">
    <h1 class="listing-head">Edit Category</h1>
  </div>
  <div class="container categories_listing_main">
    <div class="col-sm-offset-4 col-sm-4 col-xs-offset-3 col-xs-6">
  <%= form_for :category, url: admin_category_path(@category), method: :patch do |f| %>
  <% if @category.errors.any? %>
    <div id="error-explanation">
      <h2>
        <%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:
      </h2>
      <ul>
        <% @category.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <div class="listing-border">
  <p>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.submit %>
    </p>

  <% end %>

  <%= link_to 'Back', admin_categories_path %>
  </div>
  </div>
  </div>
</div>
