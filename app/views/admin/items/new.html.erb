<div class="admin-panel">
  <div class="admin-top">
    <h1 class="listing-head">New Item</h1>
  </div>
  <div class="container categories_listing_main">
    <div class="col-sm-offset-4 col-sm-4 col-xs-offset-3 col-xs-6">
      <%= form_for :item, url: admin_category_items_path, method: :post do |f| %>
      <% if @item.errors.any? %>
        <div id="error-explanation">
          <h2>
            <%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:
          </h2>
          <ul>
            <% @item.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="listing-border">
        <p>
          <%= f.label :name %><br>
          <%= f.text_field :name %>
        </p>

        <p>
          <%= f.label :description %><br>
          <%= f.text_area :description %>
        </p>

        <p>
          <%= f.label :price %><br>
          <%= f.text_area :price %>
        </p>

        <p>
          <%= f.label :discount_price %><br>
          <%= f.text_area :discount_price %>
        </p>

        <p>
          <%= f.label :stock %><br>
          <%= f.text_area :stock %>
        </p>

        <p>
          <%= f.label :sub_category %><br>
          <%= f.text_area :sub_category %>
        </p>

        <p class="file_field">
          <%= f.label :image %><br>
          <%= f.file_field :image %>
        </p>

        <p>
          <%= f.label :category_id %><br>
          <%= f.text_area :category_id %>
        </p>

        <p>
          <%= f.submit %>
        </p>
      </div>
    <% end %>
    </div>
  </div>
  <div class="back">
      <%= link_to "Back", admin_category_path(@item.category_id) %>
  </div>
</div>
